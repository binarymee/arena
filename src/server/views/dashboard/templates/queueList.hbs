<h2>Queues</h2>
<h3>Overview</h3>

<div class="row">
  <div class="no-padding">
    <ul class="list-group">
      {{#each queues}}
        <li class="list-group-item">
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}">{{ this.hostId }}/{{ this.name }}</a>
          {{#each this.jobCounts}}
            <a href="{{ ../basePath }}/{{ encodeURI ../hostId }}/{{ encodeURI ../name }}/{{ @key }}">
              <span class="badge">{{@key}} - {{ this }}</span>
            </a>
          {{/each}}
        </li>
      {{/each}}
    </ul>
  </div>
</div>

{{#contentFor 'sidebar'}}
  <li class="active"><a href="#">Queues Overview</a></li>
{{/contentFor}}
